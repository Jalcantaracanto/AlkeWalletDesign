<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="24sp">

    <ImageView
        android:id="@+id/img_profile_contact"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pp_empty" />

    <TextView
        android:id="@+id/txt_name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/jua"
        android:text="Yara Khalil"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/img_profile_contact"
        app:layout_constraintStart_toEndOf="@+id/img_profile_contact"
        app:layout_constraintTop_toTopOf="@+id/img_profile_contact"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/txt_email_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="yara_khalil@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_name_contact"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_contact"
        app:layout_constraintVertical_bias="0.13999999" />

</androidx.constraintlayout.widget.ConstraintLayout>